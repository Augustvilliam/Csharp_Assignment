<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Pages.UserMainPage"
             Title="User Main Page">
    <Grid RowDefinitions="auto, auto, auto, auto">
        
        <VerticalStackLayout>
        <Label  
            Grid.Row="0"
            Text="Welcome To The Admin Tool. Please Select An Option."
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1"
            />

        <Button
            Grid.Row="1"
            x:Name="Button_List"
            Clicked="Button_List_Clicked"
            Text="User Overview Menu"
            HorizontalOptions="Center" 
            />
        <Button
            Grid.Row="2"
            x:Name="Button_Import"
            Clicked="Button_Import_Clicked"
            Text="Import/Export Menu!"
            HorizontalOptions="Center"
            />

        <Button
            Grid.Row="3"
            x:Name="Button_Quit"
            Clicked="Button_Quit_Clicked"
            Text="Exit!"
            HorizontalOptions="Center"
            />

        </VerticalStackLayout>
    </Grid>
</ContentPage>