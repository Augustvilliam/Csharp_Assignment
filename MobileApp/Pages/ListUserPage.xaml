<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Pages.ListUserPage"
             Title="ListUserPage">
    
    <Grid ColumnDefinitions="*, *, *" >
        
        <VerticalStackLayout Grid.Column="0" Margin="20">

            <Label 
                Text="User Details"
                VerticalOptions="Center" 
                FontAttributes="Bold"
                HorizontalOptions="Center" 
                Margin="10,0,10,10"
                />
            <Label Text="Id:" FontAttributes="Bold" />
            <Label x:Name=" Label_UserId" />
            <Label Text="Name:" FontAttributes="Bold" />
            <Label x:Name=" Label_UserName" />
            <Label Text="Email:" FontAttributes="Bold" />
            <Label x:Name=" Label_Email" />
            <Label Text="Adress:" FontAttributes="Bold" />
            <Label x:Name=" Label_Adress" />
            <Label Text="Postal-Code:" FontAttributes="Bold" />
            <Label x:Name=" Label_Postal" />
            <Label Text="Locality:" FontAttributes="Bold" />
            <Label x:Name=" Label_Locality" />
            <Label Text="Phone Number:" FontAttributes="Bold" />
            <Label x:Name=" Label_Phone" />

        </VerticalStackLayout>

        <VerticalStackLayout Grid.Column="1" Margin="10">
            <Label Text="Existing Users"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="10,0,10,10"
                   />
            <CollectionView x:Name="UserListView" SelectionMode="Single" SelectionChanged="UsertListView_selectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*, auto, auto" Padding="10">
                            <Label Text="{Binding FirstName}" Grid.Column="0"></Label>
                            <Button Text="Edit" Clicked="Button_Edit_Clicked" Grid.Column="1"></Button>
                            <Button Text="Delete" Clicked="Button_Delete_Clicked" Grid.Column="2"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Column="2" Margin="20">
            <Label 
                 Text="Create User"
                FontAttributes="Bold"
                 VerticalOptions="Center" 
                 HorizontalOptions="Center"
                Margin="10,0,10,10"
                />
            <Entry
                x:Name="Entry_FirstName"
                Placeholder="First Name"
                HorizontalOptions="Fill"
                />
            <Entry
              x:Name="Entry_LastName"
              Placeholder="Last Name"
              HorizontalOptions="Fill"              
              />
            <Entry
              x:Name="Entry_Email"
              Placeholder="Email"
              HorizontalOptions="Fill"              
              />
            <Entry
              x:Name="Entry_Adress"
              Placeholder="Adress"
              HorizontalOptions="Fill"              
              />
            <Entry
              x:Name="Entry_Postal"
              Placeholder="Postal-Code"
              HorizontalOptions="Fill"              
              />
            <Entry
              x:Name="Entry_Locality"
              Placeholder="Locality"
              HorizontalOptions="Fill"              
              />
            <Entry
              x:Name="Entry_Phone"
              Placeholder="Phone number"
              HorizontalOptions="Fill"    
              />
            <Button
                x:Name="Button_Create"
                Text="Create User"
                Clicked="Button_Create_Clicked"
                />
            <Button
               x:Name="Button_EditConfirm"
               Text="Update User"
               Clicked="Button_EditConfirm_Clicked"
                IsVisible="False"
               />

        </VerticalStackLayout>

    </Grid>
    
</ContentPage>