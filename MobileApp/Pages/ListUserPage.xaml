<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Pages.ListUserPage"
             Title="ListUserPage">
    
    <Grid ColumnDefinitions="*, *, *" >
        
        <VerticalStackLayout Grid.Column="0" Margin="20">

            <Label 
                Text="Här Kommer massa knappar för alternativ"
                VerticalOptions="Center" 
                FontAttributes="Bold"
                HorizontalOptions="Center" 
                Margin="10,0,10,10"

                />
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Column="1" Margin="10">
            <Label Text="Existing Users"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="10,0,10,10"

                   />
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Column="2" Margin="20">
            <Label 
                 Text="Create User"
                FontAttributes="Bold"
                 VerticalOptions="Center" 
                 HorizontalOptions="Center"
                Margin="10,0,10,10"
                />
            <Entry
                x:Name="Entry_FirstName"
                Placeholder="First Name"
                HorizontalOptions="Fill"
                
                />
            <Button
                x:Name="Button_Create"
                Text="Create User"
                Clicked="Button_Create_Clicked"
                />

        </VerticalStackLayout>

    </Grid>
    
</ContentPage>