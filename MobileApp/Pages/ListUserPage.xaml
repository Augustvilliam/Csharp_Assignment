<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Pages.ListUserPage"
             Title="ListUserPage">
    
    <Grid ColumnDefinitions="auto, auto, *" >
        
        <VerticalStackLayout Grid.Column="0" Margin="20">
            
            <Label 
                Text="Här Kommer massa knappar för alternativ"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                />
            <Button
                 x:Name="Button_Back"
                 Clicked="Button_Back_Clicked"
                 Text="Return"
                 HorizontalOptions="Center" 
                />
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Column="1" Margin="20">
            
            <Label 
                 Text="Här ska det finnas alla användare som man kan gå in på för att se detaljerad info. Även extra knapp för att ta bort"
                 VerticalOptions="Center" 
                 HorizontalOptions="Center"
                />
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Column="2" Margin="20">

            <Label 
                 Text="Här ska man skapa användare "
                 VerticalOptions="Center" 
                 HorizontalOptions="Center"
                />
        </VerticalStackLayout>

    </Grid>
    
  

</ContentPage>